{
	"root": true,
	"extends": [
		"airbnb"
	],
	"plugins": [
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jquery": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"rules": {
		"no-tabs": 0,
		"no-shadow": 0,
		"prefer-destructuring": [
			"error",
			{
				"VariableDeclarator": {
					"array": true,
					"object": true
				},
				"AssignmentExpression": {
					"array": true,
					"object": false
				}
			}
		],
		"comma-dangle": [
			"error",
			"always-multiline",
			{
				"functions": "never"
			}
		],
		"import/extensions": ["error", "ignorePackages"],
		"max-len": [
			"error",
			120
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"complexity": [
			1,
			15
		],
		"react/jsx-indent": [
			1,
			"tab"
		],
		"react/jsx-indent-props": [
			1,
			"tab"
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"jsx-a11y/anchor-is-valid": [
			"error",
			{
				"components": [
					"Link"
				],
				"specialLink": [
					"hrefLeft",
					"hrefRight"
				],
				"aspects": [
					"noHref",
					"invalidHref",
					"preferButton"
				]
			}
		]
	}
}